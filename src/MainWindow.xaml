<Window x:Class="AdvancedClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedClock"
        mc:Ignorable="d"
        Title="高级定时闹钟" Height="600" Width="1220"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <local:BoolToStrongAlertConverter x:Key="BoolToStrongAlertConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:StringToColorConverter x:Key="StringToColorConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="定时闹钟管理" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- 当前时间显示 -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="当前时间：" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentTimeText" FontSize="16" FontWeight="Bold" 
                               VerticalAlignment="Center" Foreground="#2196F3"/>
                </StackPanel>
                <TextBlock x:Name="ClockPrecisionText" FontSize="11" 
                           HorizontalAlignment="Center" Foreground="#666666" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- 闹钟列表 -->
        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
            <ListView x:Name="AlarmListView" ItemsSource="{Binding}" 
                      SelectionMode="Single" SelectionChanged="AlarmListView_SelectionChanged"
                      MouseDoubleClick="AlarmListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="启用" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsEnabled}" 
                                              HorizontalAlignment="Center"
                                              Checked="AlarmEnabled_Changed"
                                              Unchecked="AlarmEnabled_Changed"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="名称" Width="120" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="闹钟时间" Width="140" DisplayMemberBinding="{Binding DisplayTime}"/>
                        <GridViewColumn Header="倒计时" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CountdownText}" 
                                               HorizontalAlignment="Center"
                                               FontFamily="Consolas"
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Foreground="{Binding CountdownColor, Converter={StaticResource StringToColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="循环模式" Width="80" DisplayMemberBinding="{Binding RepeatModeText}"/>
                        <GridViewColumn Header="提前提醒开始" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AdvanceStartTimeText}" 
                                               HorizontalAlignment="Center"
                                               FontFamily="Consolas"
                                               Foreground="{Binding EnableAdvanceReminder, Converter={StaticResource BoolToColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="提前提醒设置" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AdvanceReminderText}" 
                                               HorizontalAlignment="Center"
                                               FontSize="11"
                                               Foreground="{Binding EnableAdvanceReminder, Converter={StaticResource BoolToColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="强提醒" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsStrongAlert, Converter={StaticResource BoolToStrongAlertConverter}}" 
                                               HorizontalAlignment="Center"
                                               Foreground="{Binding IsStrongAlert, Converter={StaticResource BoolToColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="消息" Width="140" DisplayMemberBinding="{Binding Message}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- 操作区域 -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 操作按钮 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddAlarmButton" Content="添加闹钟" Width="100" Height="35" 
                        Margin="5" Click="AddAlarmButton_Click" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                <Button x:Name="EditAlarmButton" Content="编辑闹钟" Width="100" Height="35" 
                        Margin="5" Click="EditAlarmButton_Click" IsEnabled="False"
                        Background="#2196F3" Foreground="White" FontWeight="Bold"/>
                <Button x:Name="DeleteAlarmButton" Content="删除闹钟" Width="100" Height="35" 
                        Margin="5" Click="DeleteAlarmButton_Click" IsEnabled="False"
                        Background="#F44336" Foreground="White" FontWeight="Bold"/>
                <Button x:Name="TestAlarmButton" Content="测试闹钟" Width="100" Height="35" 
                        Margin="5" Click="TestAlarmButton_Click" IsEnabled="False"
                        Background="#FF9800" Foreground="White" FontWeight="Bold"/>
            </StackPanel>

            <!-- 设置区域 -->
            <Border Grid.Row="1" Background="#F5F5F5" Padding="10" CornerRadius="5" 
                    Margin="0,10,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <CheckBox x:Name="StartupCheckBox" Content="开机自动启动" 
                              FontSize="14" VerticalAlignment="Center" Margin="0,0,20,0"
                              Checked="StartupCheckBox_Changed"
                              Unchecked="StartupCheckBox_Changed"/>
                    <CheckBox x:Name="MinimizeToTrayCheckBox" Content="关闭时最小化到托盘" 
                              FontSize="14" VerticalAlignment="Center" Margin="0,0,20,0"
                              Checked="MinimizeToTrayCheckBox_Changed"
                              Unchecked="MinimizeToTrayCheckBox_Changed"/>
                    <Button x:Name="ViewDataFileButton" Content="📁 查看数据文件" 
                            Width="120" Height="30" Click="ViewDataFileButton_Click"
                            Background="#9C27B0" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="数据自动保存到用户目录" FontSize="12" 
                               Foreground="#666666" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
