<Window x:Class="AdvancedClock.StrongAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedClock"
        mc:Ignorable="d"
        Title="闹钟提醒" 
        WindowStyle="None" 
        WindowState="Maximized"
        AllowsTransparency="True"
        Background="#CC000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect" 
                              Color="Black" 
                              Direction="270" 
                              ShadowDepth="5" 
                              BlurRadius="20" 
                              Opacity="0.5"/>
        </Grid.Resources>
        
        <!-- 中央提醒卡片 -->
        <Border Background="White" 
                CornerRadius="15" 
                MaxWidth="600" 
                MaxHeight="400"
                Padding="40"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Effect="{StaticResource DropShadowEffect}">
            
            <StackPanel>
                <!-- 闹钟图标 -->
                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                    <Canvas Width="24" Height="24">
                        <Path Fill="#FF5722" Data="M12,20A7,7 0 0,1 5,13A7,7 0 0,1 12,6A7,7 0 0,1 19,13A7,7 0 0,1 12,20M12,4A9,9 0 0,0 3,13A9,9 0 0,0 12,22A9,9 0 0,0 21,13A9,9 0 0,0 12,4M12.5,8H11V14L15.75,16.85L16.5,15.62L12.5,13.25V8M7.88,3.39L6.6,1.86L2,5.71L3.29,7.24L7.88,3.39M22,5.72L17.4,1.86L16.11,3.39L20.71,7.25L22,5.72Z"/>
                    </Canvas>
                </Viewbox>

                <!-- 闹钟名称 -->
                <TextBlock x:Name="AlarmNameText" 
                           Text="闹钟提醒" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           TextAlignment="Center"
                           Foreground="#333333"
                           Margin="0,0,0,15"/>

                <!-- 当前时间 -->
                <TextBlock x:Name="CurrentTimeText" 
                           Text="12:00:00" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           TextAlignment="Center"
                           Foreground="#FF5722"
                           Margin="0,0,0,20"/>

                <!-- 闹钟消息 -->
                <Border Background="#F5F5F5" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,30">
                    <TextBlock x:Name="AlarmMessageText" 
                               Text="闹钟时间到！" 
                               FontSize="18" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="#666666"
                               MaxHeight="100"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- 关闭按钮 -->
                <Button x:Name="CloseButton" 
                        Content="关闭闹钟" 
                        Width="200" 
                        Height="50"
                        FontSize="18" 
                        FontWeight="Bold"
                        Background="#FF5722" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF5722"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="25" 
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E64A19"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#D84315"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
